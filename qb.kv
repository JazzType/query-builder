#: import sm kivy.uix.screenmanager
<QueryBuilder>:
	screen_manager: screen_manager
	video_player:video_player
	main_layout: mainlayout
	res_layout: res_layout

	ScreenManager:
		transition: sm.NoTransition()
		id: screen_manager
		#QueryBuilderScreen
		Screen:
			name: 'QueryBuilderScreen'
			BoxLayout:				
				orientation: 'horizontal'
				padding: [10, 10, 10, 10]				
				id: mainlayout
				qb_button: qbbutton
				next_button: nextbutton

				BoxLayout:
					canvas.before:
						Color:
							rgba: (246, 248, 250, 1)
						Rectangle:
							pos: self.pos
							size: self.size
					orientation: 'vertical'
					size_hint: (0.8, 1)
					
					VideoPlayer:
						id: video_player
						size_hint: (1, 0.90)
						padding: [10, 10, 10, 10]
						source:  "/home/akash/VideoCricAnalysis-master/videos/Full_Match.avi"


					Button:
						text: 'Build a Query'
						id: qbbutton
						on_press: root.update_button()
						size_hint: (1, 0.05)
						background_normal: ''
						background_color: (255, 165, 0, 1)
						color: (0, 0, 0, 1)

					Button:
						text: 'Next'						
						id: nextbutton
						on_press: root.change_screen('ResultScreen')
						size_hint: (1,0.05)
						background_normal: ''
						background_color: (255, 165, 0, 1)
						color: (0, 0, 0, 1)

		#ResultScreen
		Screen:
			name: 'ResultScreen'
			BoxLayout:
				id: res_layout
				orientation:'horizontal'
				Button:
					text: 'Go Back'
					on_release: root.change_screen('QueryBuilderScreen')
				


<QueryBuilder>:
	screen_manager: screen_manager
	video_player:video_player
	main_layout: mainlayout
	ScreenManager:
		id: screen_manager
		#QueryBuilderScreen
		res_layout: res_layout
		Screen:	
			name: 'QueryBuilderScreen'
			BoxLayout:
				orientation: 'horizontal'
				padding: [10, 10, 10, 10]
				background_color: (0, 0, 0, 0.2)
				id: mainlayout
				qb_button: qbbutton
				next_button: nextbutton
				BoxLayout:
					size_hint: (0.1, 1)
					orientation: 'vertical'	
					Label:
						text: 'Tournament'
						size_hint: (1, 0.1)
					Image:
						source: '/home/akash/Kivy/A/images/fifa_wc2014_logo.png'
						border: (None, None, None, None)
						size_hint: (1, 0.5)				
					BoxLayout:
						size_hint: (1, 0.4)
						orientation: 'vertical'
						Label:
							text: 'Sub-events'
						BoxLayout:
							orientation: 'horizontal'
							Label:
								text: 'Kicking'
							Label:
								text: 'Catching'

				BoxLayout:			
					orientation: 'vertical'
					size_hint: (0.8, 1)
					
					VideoPlayer:
						id: video_player
						size_hint: (1, 0.95)
						padding: [10, 10, 10, 10]
						source:  "F:\Torrents\X Men Apocalypse\X-Men.Apocalypse.2016.720p.BluRay.x265.ShAaNiG.mkv"


					Button:
						text: 'Build a Query'
						id: qbbutton
						on_press: root.update_button(mainlayout,res_layout)						
						size_hint: (0.95, 0.05)
						
					Button:
						text: 'Next'
						id: nextbutton
						on_press: root.change_screen('ResultScreen')
						size_hint: (1,0.05)
		#ResultScreen
		Screen:
			name: 'ResultScreen'
			BoxLayout:
				id: res_layout
				orientation:'vertical'
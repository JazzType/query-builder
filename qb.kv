<QueryBuilder>:
	screen_manager: screen_manager
	video_player:video_player
	main_layout: mainlayout
	ScreenManager:
		id: screen_manager
		
		#QueryBuilderScreen
		Screen:	
			name: 'QueryBuilderScreen'
			BoxLayout:
				orientation: 'horizontal'
				padding: [10, 10, 10, 10]
				background_color: (0, 0, 0, 0.2)
				id: mainlayout
				qb_button: qbbutton
				BoxLayout:
					size_hint: (0.1, 1)
					orientation: 'vertical'	
					Label:
						text: 'Tournament'
						size_hint: (1, 0.1)
					Image:
						source: '/home/akash/Kivy/A/images/fifa_wc2014_logo.png'
						border: (None, None, None, None)
						size_hint: (1, 0.5)				
					BoxLayout:
						size_hint: (1, 0.4)
						orientation: 'vertical'
						Label:
							text: 'Sub-events'
						BoxLayout:
							orientation: 'horizontal'
							Label:
								text: 'Kicking'
							Label:
								text: 'Catching'

				BoxLayout:			
					orientation: 'vertical'
					size_hint: (0.8, 1)
					
					VideoPlayer:
						id: video_player
						size_hint: (1, 0.95)
						padding: [10, 10, 10, 10]
						source: '/home/Downloads/wws1e9.mkv'


					Button:
						text: 'Build a Query'
						id: qbbutton
						on_press: root.update_button(mainlayout)						
						size_hint: (1, 0.05)
		
		#ResultScreen
		Screen:
			name: 'ResultScreen'
			
			BoxLayout:
				orientation:'vertical'
				size_hint:(.2,.2)
				pos: (400,75)	
				ToggleButton:
					text: "Player1"
					id: player1
				ToggleButton:
					text: "Player2"
					id: player2
				ToggleButton:
					text: "Player3"
					id: player3

				
